<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:id="@+id/shop_ll"
    android:background="@drawable/background"
    android:padding="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/image_ll"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/imgView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/demo_image"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/image_ll"
        android:fontFamily="@font/medium_mont"
        android:text="Anu Meat Shop"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/currencyicon"
        android:layout_below="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/image_ll"
        android:fontFamily="@font/medium_mont"
        android:text="@string/currency_icon"
        android:textColor="@color/black" />

    <TextView

        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currencyicon"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/image_ll"
        android:fontFamily="@font/medium_mont"
        android:text="150"
        android:textColor="@color/lighblue" />




    <ImageView
        android:id="@+id/favourites_icon"
        android:layout_alignParentRight="true"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/favourites_selected"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"/>

    <RelativeLayout
        android:id="@+id/rating_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favourites_icon"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/rating5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/rating_unselected" />

        <ImageView
            android:id="@+id/rating4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/rating5"
            android:src="@drawable/rating_unselected" />

        <ImageView
            android:id="@+id/rating3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/rating4"
            android:src="@drawable/rating_selected" />

        <ImageView
            android:id="@+id/rating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/rating3"
            android:src="@drawable/rating_selected" />

        <ImageView
            android:id="@+id/rating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/rating2"
            android:src="@drawable/rating_selected" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_ll"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@+id/rating_ll"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/redbox">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/medium_mont"
            android:text="Visit Shop"
            android:textColor="@color/white" />


    </RelativeLayout>


</RelativeLayout>